<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
       xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	   http://www.springframework.org/schema/security
	   http://www.springframework.org/schema/security/spring-security-3.2.xsd">

       <http auto-config="true" use-expressions="true">
              <intercept-url pattern="/login*" access="permitAll" />
              <intercept-url pattern="/**" access='hasRole("ROLE_ADMIN")' />
              <intercept-url pattern="/** and /pik*" access='hasRole("ROLE_PROMOTER")' />
              <intercept-url pattern="/**" access='hasRole("ROLE_STUDENT")' />
              <form-login login-page="/login-required.html"
                          authentication-failure-url="/login-failed.html"
                          default-target-url="/pik.html"
                          username-parameter="j_username"
                          password-parameter="j_password"/>
              <remember-me/>
              <logout logout-success-url="/index"/>
       </http>

       <authentication-manager>
              <authentication-provider>
                     <user-service>
                            <user name="admin" authorities="ROLE_USER, ROLE_PROMOTER, ROLE_ADMIN, ROLE_STUDENT"  password="admin"/>
                            <user name="student" authorities="ROLE_USER, ROLE_STUDENT"  password="student"/>
                            <user name="promoter" authorities="ROLE_USER, ROLE_PROMOTER"  password="promoter"/>
                     </user-service>
              </authentication-provider>
       </authentication-manager>
</beans:beans>